@model IEnumerable<SalonWebApplication.Models.PaymentTypeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Payment Type</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Create New</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaymentTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentName)
            </th>
            <th>@Html.Label("Actions")</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentTypeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentName)
                </td>
                <td style="min-width:85px !important">

                    <a asp-action="Edit" class="btn-warning" asp-route-id="@item.PaymentTypeId "> <i class="fas fa-edit" aria-hidden="true"> </i></a>   |
                    <a asp-action="Details" class="btn-success" asp-route-id="@item.PaymentTypeId "> <i class="fa fa-info-circle" aria-hidden="true"> </i></a>  |
                    <a asp-action="Delete" class="btn-danger" asp-route-id="@item.PaymentTypeId " onclick="return confirm('Are you sure you would like to delete this piece of information?? ')"> <i class="fas fa-trash-alt"></i></a>




                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts    {
    <script>
        $(document).ready(function () {
            $('#tblData').DataTable();
        });
    </script> }