@model IEnumerable<SalonWebApplication.Models.ServiceViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Services</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Create New</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceCost)
            </th>
          @*  <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>*@
            <th>@Html.Label("Actions")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceName)
                </td>
                <td>
                    @item.ServiceCost.ToString("C")
                    @* @Html.DisplayFor(modelItem => item.ServiceCost)*@
                </td>
              @*  <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>*@
                <td style="min-width:85px !important">

                    <a asp-action="Edit" class="btn-warning" asp-route-id="@item.ServiceId "> <i class="fas fa-edit" aria-hidden="true"> </i></a>   |
                    <a asp-action="Details" class="btn-success" asp-route-id="@item.ServiceId "> <i class="fa fa-info-circle" aria-hidden="true"> </i></a>  |
                    <a asp-action="Delete" class="btn-danger" asp-route-id="@item.ServiceId " onclick="return confirm('Are you sure you would like to delete this piece of information?? ')"> <i class="fas fa-trash-alt"></i></a>




                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts    {
    <script>
        $(document).ready(function () {
            $('#tblData').DataTable();
        });
    </script> }
